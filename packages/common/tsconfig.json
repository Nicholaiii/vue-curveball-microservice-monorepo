{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "strict": true,

    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,

    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/types/*"
      ]
    },
    "lib": [
      "DOM",
      "ESNext"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**/*"
  ]
}
